        <RadioButton Content="Построить вечный двигатель" HorizontalAlignment="Left" Margin="500,84,0,0" Grid.Row="1" VerticalAlignment="Top" Height="27" Width="245" FontSize="16"/>
        <Button Content="+Добавить задачу" HorizontalAlignment="Left" Margin="500,119,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Click_Button" Width="141" Height="27"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,14,0,0" TextWrapping="Wrap" Text="Список задач" VerticalAlignment="Top" FontSize="18"/>
       

    </Grid>
